= form_for @region do |f|
  - if @region.errors.any?
    #error_explanation
      %h2= "#{pluralize(@region.errors.count, "error")} prohibited this region from being saved:"
      %ul
        - @region.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :store
    = f.collection_select(:store_id, Store.find(:all), :id, :title, :prompt => true, :selected => params[:store])
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :pavilion
    = f.collection_select(:pavilion_id, Store.find(params[:store]).pavilions, :id, :brandname, :prompt => true)
  .actions
    = f.submit 'Save'
