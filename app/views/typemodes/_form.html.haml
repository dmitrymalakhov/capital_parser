= form_for @typemode, :html => { :multipart => true } do |f|
  - if @typemode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@typemode.errors.count, "error")} prohibited this typemode from being saved:"
      %ul
        - @typemode.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :store
    = f.collection_select(:store_id, Store.all, :id, :title, :prompt => true)
  .field
    = f.file_field :image
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :path
    = f.text_field :path
  .actions
    = f.submit 'Save'
